package com.memento.flash.display {	import flash.display.MovieClip;	import flash.text.TextFormat;	import flash.text.TextField;	import flash.text.AntiAliasType;	import flash.text.TextFieldAutoSize;	import com.memento.flash.events.CustomEvent;	import com.memento.flash.display.Checker;	public class CheckList extends MovieClip {		public static var GAP:Number = 20;		private var _onlyOne:Boolean;		private var _checkerArr:Array;		public function CheckList(arr:Array, onlyOne:Boolean = true) {			_checkerArr = new Array();			_onlyOne    = onlyOne;			for (var i:uint=0; i<arr.length; i++) {				var format:TextFormat = new TextFormat();				format.font           = "Skia";				format.size           = 13;				format.color          = 0x666666;				var checker:Checker = new Checker(arr[i].checked);				checker.data = i;				checker.y    = i * GAP;				addChild(checker);				checker.addEventListener(Checker.CHECKER_CLICKED,					function (event:CustomEvent) {						if (_onlyOne) {							for each (var item:Checker in _checkerArr) {								if (item != event.currentTarget) item.selected = false;							}						}												}				);				_checkerArr.push(checker);				var label:TextField = new TextField();				label.mouseEnabled  = false;				//label.embedFonts    = true;				label.antiAliasType = AntiAliasType.NORMAL;				label.autoSize      = TextFieldAutoSize.LEFT;				label.x             = 30;				label.y             = checker.y;				label.text          = arr[i].text;				label.setTextFormat(format);				addChild(label);			}		}		public function get state():Array {			var tmp:Array = new Array();			for (var i:uint=0; i<_checkerArr.length; i++) {				tmp.push(_checkerArr[i].selected);			}			return tmp;		}	}}