package com.memento.flash.display {	import flash.display.MovieClip;	import flash.display.Sprite;	import flash.events.MouseEvent;	import com.memento.flash.events.CustomEvent;	public class Checker extends MovieClip {		public static const CHECKER_CLICKED:String = "CheckerClicked";		private var _checkGfx:Sprite;		public var data:*;		public function Checker(checked:Boolean = false):void {			with (graphics) {				lineStyle(1.5, 0x666666, 1);				beginFill(0, 0);				drawRect(0, 0, 10, 10);				endFill();			}			_checkGfx  = new Sprite();			with (_checkGfx.graphics) {				lineStyle(2, 0, 1);				moveTo(2.5, 6);				lineTo(4, 8);				lineTo(7.5, 2);			}			if (!checked) _checkGfx.visible = false;			addChild(_checkGfx);			buttonMode = true;			addEventListener(MouseEvent.CLICK, clickHandler);		}		private function clickHandler(event:MouseEvent):void {			_checkGfx.visible = !_checkGfx.visible;			dispatchEvent(new CustomEvent(CHECKER_CLICKED, {data:data, checked:_checkGfx.visible}));		}		public function get selected():Boolean {			return _checkGfx.visible;		}		public function set selected(sel:Boolean):void {			_checkGfx.visible = sel;		}	}}